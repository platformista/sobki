{
    "name": "sobki/sobki",
    "description": "This template builds the Sobki Bootstrap Drupal Distribution for Drupal 10 for Platform.sh products.",
    "keywords": [
        "Sobki"
    ],
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/sobki_profile_bootstrap",
    "support": {
        "docs": "https://docs.platform.sh/"
    },
    "repositories": {
        "asset-packagist": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "require": {
        "composer/installers": "^2.0",
        "cweagans/composer-patches": "^1.0",
        "oomphinc/composer-installers-extender": "^2.0",
        "drupal/core-composer-scaffold": "^10.0",
        "drupal/core-project-message": "^10.0",
        "drupal/core-recommended": "^10.0",
        "drupal/redis": "^1.6",
        "drupal/sobki_profile_bootstrap": "10.0.0-alpha3",
        "drush/drush": "^12",
        "platformsh/config-reader": "^2.4"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "composer-exit-on-patch-failure": true,
        "drupal-scaffold": {
            "locations": {
                "web-root": "./web"
            },
            "file-mapping": {
                "[web-root]/robots.txt": false
            },
            "initial": {
                "sites/default/default.services.yml": "sites/default/services.yml",
                "sites/default/default.settings.php": "sites/default/settings.php"
            },
            "excludes": [
                "sites/development.services.yml"
            ]
        },
        "enable-patching": true,
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/fontawesome": [
                "npm-asset/fortawesome--fontawesome-free"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "patchLevel": {
            "drupal/core": "-p2"
        }
    },
    "config": {
        "allow-plugins": {
            "cweagans/composer-patches": true,
            "drupal/core-project-message": true,
            "php-http/discovery": true,
            "drupal/core-vendor-hardening": true,
            "drupal/core-composer-scaffold": true,
            "composer/installers": true,
            "oomphinc/composer-installers-extender": true
        }
    },
    "scripts": {
        "nuke": "rm -r -f bin vendor composer.lock web"
    }
}
